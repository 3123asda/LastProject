            update_loop_first:
            while (true){
                Statement database_empty_value = connection.createStatement();
                ResultSet update_student = database_empty_value.executeQuery("SELECT * FROM `"+tableName+"` ");

                if(!update_student.isBeforeFirst()){
                    System.out.println("Class Record Is Empty! You Can't Use Update Command.");
                    break;
                }else{
                    while (true){
                        Update_loop:
                        while (true){
                            class_record();
