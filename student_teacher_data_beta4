                                        update_student_record_name.setString(3,coc_account_password);
                                        update_student_record_name.setString(4,student_ID);

                                        update_student_record_name.executeUpdate();

                                    }
                                }

                            } else if (update_student_record.equals("g")) {
                                while (true){
                                    class_record();
                                    System.out.print("Enter Student ID: ");
                                    String student_ID = call_scanner.nextLine();
                                    PreparedStatement check_student_id_update = connection.prepareStatement("SELECT * FROM `"+tableName+"` WHERE student_id = ? ");
                                    check_student_id_update.setString(1,student_ID);

