                                        update_student_record_grade.setInt(2, pr_grade);
                                        update_student_record_grade.setInt(3, philo_grade);
                                        update_student_record_grade.setInt(4, pe_grade);
                                        update_student_record_grade.setInt(5, ict_grade);
                                        update_student_record_grade.setDouble(6,total_average);
                                        if(total_average > 74){
                                            update_student_record_grade.setString(7,"Passed");
                                            update_student_record_grade.setString(8,student_ID);
                                            update_student_record_grade.executeUpdate();
                                        } else if (total_average <=74) {
                                            update_student_record_grade.setString(7,"Failed");
                                            update_student_record_grade.setString(8,student_ID);
                                            update_student_record_grade.executeUpdate();
                                        }
                                    }

                                }
                            } else if (update_student_record.equals("d")) {
                                class_record();
                                System.out.print("Enter Student ID: ");
                                String student_ID = call_scanner.nextLine();
