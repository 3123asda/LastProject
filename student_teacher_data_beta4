    static int ict_grade(Scanner call_scanner){
        boolean ict;
        while (true){
            try {
                ict = false;
                System.out.print("Enter Ict Grade: ");
                ict_grade = call_scanner.nextInt();
                call_scanner.nextLine();

                if (ict_grade >= 101){
                    System.out.println("Invalid Grade Input");

                } else if (ict_grade <= 69) {
                    System.out.println("Invalid Grade Input");

                }else{
                    return ict_grade;
                }

            }catch (Exception e){
                ict = true;
