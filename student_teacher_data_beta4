                                        System.out.println("Student ID Is Not Found Class Record.");
                                        break;
                                    }else{
                                        PreparedStatement update_student_record_grade = connection.prepareStatement("UPDATE `"+tableName+"` SET filipino_grade = ?,pr_grade = ?, philosophy_grade = ?, pe_grade = ?, ict_grade = ?, total_average = ?, Evaluation = ? WHERE student_id = ?");
                                        student_subject_grade();

