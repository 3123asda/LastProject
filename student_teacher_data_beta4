                                if(!student_ID_update.next()){
                                    System.out.println("Student ID Is Not Found Class Record.");
                                    break;
                                }else{
                                    PreparedStatement update_student_record_birthday = connection.prepareStatement("UPDATE `"+tableName+"` SET student_birthday = ?, student_password = ? WHERE student_id = ?");

                                    do {
                                        try {
                                            year_loop = false;
